<!--*
	  Renders UI for a section overview page.

    @tags inject:#page-section, custom:page/Section

    @property { object } section
      Section on display.
    @property { object } site
      Data from **Docsite** component.
    @property { string } title
      Title for the page.
-->

<div class="page-section">
  <main>
    <div class="leader">
      <div class="title">{ title }</div>
      <Crumbs {section} />
    </div>
    <div class="content">
      <Article {mcid} />
      <Assets sects={section.name} type="columns">
        {#snippet children(asset)}
          <Link class="annex-link" to={asset} />
        {/snippet}
      </Assets> 
    </div>
  </main>
  <nav>
    {@render site.tree()}
    {@render site.toc(mcid, tocDepth)}
    {@render site.tree('documents')}
    {@render site.tree('components')}
  </nav>
</div>


<script module>
import Article from '#shared/common/Article'
import Assets from '#shared/common/Assets'
import Crumbs from '#shared/common/Crumbs'
import Link from '#shared/helper/Link'
</script>

<script>
let { section, site, title } = $props();
let { mcid, tocDepth } = section;
</script>

