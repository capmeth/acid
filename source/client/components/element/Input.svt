<!--*
    Accepts user input.

    @tags group:element, extra-props:input, page, region

    @property { any } [value]
      Data in the input field. This field is `$bindable`.
-->

<div class="element-input page-{ctx.page} region-{ctx.region}">
  <input {value} {...attrs} oninput={input} />
</div>


<script>
let { value = $bindable(), ...attrs } = $props();

let input = evt => value = evt.target.value;
</script>
