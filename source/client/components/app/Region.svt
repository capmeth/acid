<!--*
    Sets a region id in the context.

    @tags group:app
    @property { string } name
      Region id
    @property { string } tag
      HTML tag name to render.
-->

<svelte:element this={tag} class="app-region region-{name}">
  <div class="liner">
    {@render children()}
  </div>
</svelte:element>


<script>
let { name, tag, children } = $props();
ctx.region = name;
</script>
