<!--*
    Sets a region id in the context.

    @tags group:app, page

    @property { string } [name]
      Region id
    @property { string } [tag="div"]
      HTML tag name to render.
-->

<svelte:element this={tag} class="app-region page-{ctx.page} region-{name}">
  <div class="liner">
    {@render children()}
  </div>
</svelte:element>


<script>
let { name, tag, children } = $props();
ctx.region = name;
tag ||= 'div'
</script>
